{
    "trailingComma": "none",
    "tabWidth": 4,
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "bracketSameLine": true,
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "parser": "html"
            }
        },
        {
            "files": "*.component.html",
            "options": {
                "parser": "html",
                "printWidth": 120,
                "bracketSameLine": true
            }
        }
    ]
}
